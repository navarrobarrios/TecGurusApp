<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:id="@+id/item_user_item"
    android:background="@color/colorSecondaryText"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_weight="2"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/item_user_name"
            android:layout_marginTop="8dp"
            android:textColor="#FFF"
            tools:text="Jose Alberto Navarro Barrios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/item_user_password"
            android:layout_marginTop="8dp"
            android:textColor="#FFF"
            tools:text="**********"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:id="@+id/item_user_address"
            android:layout_marginTop="8dp"
            android:textColor="#FFF"
            tools:text="Casiopea 5050 col. la calma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_user_update"
            android:layout_gravity="top"
            android:src="@drawable/ic_update_black_24dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <ImageView
            android:id="@+id/item_user_delete"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="16dp"
            android:layout_height="16dp" />

    </FrameLayout>

</LinearLayout>